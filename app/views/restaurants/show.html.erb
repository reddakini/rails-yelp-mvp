<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h3 class="mt-3">Current reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"> ⭐️ <%= review.rating %> <br> <%= review.content %></li>
  <% end %>
</ul>
<br>

<div>
  <div class="d-flex justify-content-between algn-items-center">
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-outline-primary" %>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-outline-primary" %>
  </div>

  <h3 class="mt-5">Write a review</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

</div>
